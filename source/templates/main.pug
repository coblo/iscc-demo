html

	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		title ISCC Demo
		link(rel="stylesheet", href="/css/style.css")
		script(src="/socket.io/socket.io.js")
		script(src="/libraries/functions.js")
		script(src="//cdn.ckeditor.com/4.7.1/full/ckeditor.js")

	body

		section#result

			.heading ISCC

			each id in ['metaID', 'contentID', 'dataID', 'instanceID']
				.id(id= id)= id
					.value 000000000000000

		#loadingBar
			.bar

		section#input-data

			#bom
				.heading Basic On-Chain Metadata (BOM)

				.title
					span Title
					input(type="text", name="title")

				.creators
					span Creators

					button#addCreator

			#text

				.heading Texteditor

				textarea

		#generate
			button.generate-button(type=button) Generate ISCC

		section#log

			.heading Log

			.logEntries
				each entry, key in logEntries
					include logentry

		script(type="text/template")#logEntryTemplate
			include logentry

		script
			include ../scripts/main.js